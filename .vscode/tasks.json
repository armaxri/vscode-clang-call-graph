{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "watch",
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "shell",
      "label": "generate test files jsons",
      "command": "${workspaceFolder}/scripts/create_clang_json.py -u -a -r",
      "problemMatcher": []
    }
  ]
}
